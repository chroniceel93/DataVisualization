<html>
  <head>
    <link rel="stylesheet" href="/static/style.css" />
  </head>
  
  <body>
    <div class="container">
      <div class="child">
        <h1>Login</h1>
        <form action="" method="post">
          <label for="uname"><b>Username</b></label>
          <input type="text" placeholder="Username" name="username" value="{{request.form.username }}"><br><br>
      
          <label for="psw"><b>Password</b></label>
          <input type="password" placeholder="Password" name="password" value="{{request.form.password }}"><br><br>
      
          <input class="button" type="submit" value="Login"><br>
        
          {% if error %}
          <p class="error"><strong>Error:</strong> {{ error }}
          {% endif %}
        </form>
      </div>
      <button onclick="location.href = '/template'">Back to Template(debug)</button>
    </div>
  </body>

  <script>
    var testArray = [];
    localStorage.setItem('myArray', testArray);
    localStorage.setItem('myArray2', testArray);
  </script>

</html>